{
  "manifest_version": 3,
  "name": "SnappyNotes Extension",
  "version": "1.0",
  "description": "Add notes to SnappyNotes directly from Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://snappynotes.onrender.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
